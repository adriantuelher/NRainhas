<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada da Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F000000" /> <!-- Sombra preta com baixa opacidade -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Camada Principal (Frente) -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor principal branca -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Borda cinza clara -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
